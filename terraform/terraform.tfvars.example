# AWS 설정
aws_profile = "ddobak"
aws_region  = "ap-northeast-2"

# 환경 설정
environment = "dev"

# 프로젝트 설정
project_name = "ddobak"

# ECR 설정
ecr_repository_name = "ddobak/ocr"

# Lambda 설정
lambda_function_name = "ddobak-ocr-function"
lambda_memory_size   = 1024
lambda_timeout       = 30

# CORS 설정 (Lambda Function URL)
lambda_cors_allow_origins = ["*"]

